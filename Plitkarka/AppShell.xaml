<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Plitkarka.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Plitkarka.Views"
    FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Icon="tab_home.png" ContentTemplate="{DataTemplate views:FeedDashboard}"/>
        <ShellContent Icon="tab_search.png"  ContentTemplate="{DataTemplate views:SearchPage}"/>
        <ShellContent Icon="tab_createpost.png" ContentTemplate="{DataTemplate views:CreatePostPage}"/>
        <ShellContent Icon="tab_chats.png" ContentTemplate="{DataTemplate views:ChatPage}"/>
        <ShellContent Icon="tab_profile.png" ContentTemplate="{DataTemplate views:ProfilePage}"/>
    </TabBar>
</Shell>
